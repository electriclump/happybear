<header class="page-header">
  <h1>Guestbook</h1>
</header>

<div class="row">
  <div class="col-md-8">
    <div class="hero-unit">
      <%= simple_form_for @entry,
          url: '/',
          class: "form-horizontal well" do |f| %>
        <div class='control-group'>
          <%= f.input :name, label: 'Name', error: 'Name is mandatory' %>
        </div>
        <div class='control-group'>
          <%= f.input :message, as: :text, label: 'Message', error: 'Message is mandatory' %>
        </div>
        <%= f.submit "Add Entry", class: "btn" %>
      <% end %>
    </div>
  </div>
</div>

<% @entries.each do |entry| %>
  <div class="row">
    <div class="col-md-6">
      <blockquote>
        <%= simple_format entry.message %>
        <small>
          Posted <%= entry.created_at %> ago
          by <strong><%= entry.name %></strong>
        </small>
      </blockquote>
    </div>
    <div class="col-md-2 text-right">
      <%= link_to "Delete",
        { action: :destroy, id: entry.id },
        method: :delete,
        class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>
