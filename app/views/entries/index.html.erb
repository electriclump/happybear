<div class="page-header">
  <h1>Guestbook</h1>
</div>

<div class="span8 hero-unit">
  <%= simple_form_for @entry,
      class: "form-horizontal well" do |f| %>
    <%= f.input :name, label: 'Name', error: 'Name is mandatory' %>
    <%= f.input :message, as: :text, label: 'Message', error: 'Message is mandatory' %>
    <br>
    <%= f.submit "Add Entry", class: "btn" %>
  <% end %>
</div>

<div class="row">
  <div class="span12">
    <% @entries.each do |entry| %>
      <div class="span7">
        <blockquote>
          <%= simple_format entry.message %>
          <small>
            Posted <%= time_ago_in_words(entry.created_at) %> ago
            by <strong><%= entry.name %></strong>
          </small>
        </blockquote>
      </div>
      <div class="span1">
        <%= link_to "Delete",
          { action: :destroy, id: entry.id },
          method: :delete,
          class: 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>
