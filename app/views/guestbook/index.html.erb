<%= form_for @entry, url: {controller: "entries", action: "create"} do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  <%= f.label :message, "Message" %>
  <%= f.text_area :message %>
  <%= f.submit "Add Entry" %>

<% end %>
<% @entries.each do |entry| %>
  <p><%= entry.name %></p>
  <p><%= entry.message %></p>
<% end %>

