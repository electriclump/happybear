<section id="guestbook">
  <div class="page-header">
    <h1>Guestbook</h1>
  </div>

  <div class="span8 hero-unit">
    <%= form_for @entry,
      url: {controller: "entries", action: "create"},
      class: "form-horizontal well" do |f| %>
      <%= f.label :name, "Name" %>
      <%= f.text_field :name %>
      <%= f.label :message, "Message" %>
      <%= f.text_area :message %>
      <br>
      <%= f.submit "Add Entry", class: "btn" %>
    <% end %>
  </div>

  <div class="row">
    <div class="span12">
      <% @entries.each do |entry| %>
        <div>
          <blockquote>
            <%= simple_format entry.message %>
            <small>
              Posted <%= time_ago_in_words(entry.created_at) %> ago
              by <strong><%= entry.name %></strong>
            </small>
          </blockquote>
        </div>
      <% end %>
    </div>
  </div>
</section>
